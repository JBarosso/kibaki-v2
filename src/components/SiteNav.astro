---
// Composant de navigation statique pour les pages légales
// Basé sur AppHeader.tsx mais sans interactivité côté client
import AuthMenu from '@/components/AuthMenu';
---

<header class="border-b bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
  <div class="mx-auto max-w-5xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="font-semibold tracking-tight">Kibaki</a>

    <nav class="flex items-center gap-4 text-sm">
      <a href="/duel" class="rounded px-2 py-1 hover:bg-gray-100 transition-colors text-gray-600">Duel</a>
      <a href="/t" class="rounded px-2 py-1 hover:bg-gray-100 transition-colors text-gray-600">Tournois</a>
      <a href="/top" class="rounded px-2 py-1 hover:bg-gray-100 transition-colors text-gray-600">Top</a>
      <a href="/submit" class="rounded px-2 py-1 hover:bg-gray-100 transition-colors text-gray-600">Soumettre</a>
      <AuthMenu client:load />
      
      {/* Info dropdown */}
      <div class="relative">
        <details class="group">
          <summary class="cursor-pointer select-none text-sm text-gray-600 hover:text-gray-900 inline-flex items-center gap-1">
            <span aria-hidden="true">ⓘ</span> <span>Info</span>
          </summary>
          <div class="absolute right-0 mt-2 w-56 rounded-xl border border-gray-200 bg-white shadow-lg p-3 text-sm space-y-2">
            <ul class="space-y-1">
              <li><a class="block rounded px-2 py-1 hover:bg-gray-50" href="/legal">Mentions légales</a></li>
              <li><a class="block rounded px-2 py-1 hover:bg-gray-50" href="/privacy">Confidentialité</a></li>
              <li><a class="block rounded px-2 py-1 hover:bg-gray-50" href="/terms">Conditions d'utilisation</a></li>
            </ul>
            <p class="text-xs text-gray-600 pt-1">All characters are in the public domain.</p>
          </div>
        </details>
      </div>
    </nav>
  </div>
</header>
