---
// Composant de navigation statique pour les pages légales
// Basé sur AppHeader.tsx mais sans interactivité côté client
import LanguageSwitcher from '@/components/LanguageSwitcher';
import { getLangCookie, resolveLang, setLangCookie, tServer } from '@/i18n';
import type { Lang } from '@/i18n';

const existingCookie = getLangCookie(Astro);
const lang: Lang = resolveLang({ url: Astro.url, req: Astro.request, cookie: existingCookie ?? undefined });
if (existingCookie !== lang) {
  setLangCookie(Astro, lang);
}

const nav = {
  duel: tServer(lang, 'nav.duel'),
  tournaments: tServer(lang, 'nav.tournaments'),
  top: tServer(lang, 'nav.top'),
  submit: tServer(lang, 'nav.submit'),
  account: tServer(lang, 'nav.account'),
  info: tServer(lang, 'nav.info'),
  legal: tServer(lang, 'nav.legal'),
  privacy: tServer(lang, 'nav.privacy'),
  terms: tServer(lang, 'nav.terms'),
};

const infoText = tServer(lang, 'info.publicDomain');
---

<header class="site-nav">
  <div class="site-nav__container">
    <a href="/" class="site-nav__logo">Kibaki</a>

    <nav class="site-nav__nav">
      <a href="/duel" class="site-nav__link">{nav.duel}</a>
      <a href="/t" class="site-nav__link">{nav.tournaments}</a>
      <a href="/top" class="site-nav__link">{nav.top}</a>
      <a href="/submit" class="site-nav__link">{nav.submit}</a>
      <a href="/account" class="site-nav__link">{nav.account}</a>

      {/* Info dropdown */}
      <div class="site-nav__info-dropdown">
        <details>
          <summary class="site-nav__info-summary">
            <span class="site-nav__info-icon" aria-hidden="true">ⓘ</span> <span>{nav.info}</span>
          </summary>
          <div class="site-nav__info-content">
            <ul class="site-nav__info-list">
              <li class="site-nav__info-item"><a class="site-nav__info-link" href="/legal">{nav.legal}</a></li>
              <li class="site-nav__info-item"><a class="site-nav__info-link" href="/privacy">{nav.privacy}</a></li>
              <li class="site-nav__info-item"><a class="site-nav__info-link" href="/terms">{nav.terms}</a></li>
            </ul>
            <p class="site-nav__info-text">{infoText}</p>
          </div>
        </details>
      </div>

      <LanguageSwitcher client:only="react" lang={lang} />
    </nav>
  </div>
</header>
