---
import SiteLayout from '@/layouts/SiteLayout.astro';
import Seo from '@/components/Seo.astro';
import DuelContainer from '@/components/DuelContainer';
import { resolveLang, tServer } from '@/i18n';

const lang = resolveLang(Astro);
const rawTitle = tServer(lang, 'duel.title');
const title = rawTitle && rawTitle !== 'duel.title' ? rawTitle : 'Kibaki — Duel';
---

<SiteLayout lang={lang} title={title}>
  <Seo slot="head" title={title} description="Vote dans le duel en cours." />
  <h1 class="text-2xl font-bold mb-4">Who Beats Who?</h1>
  <p class="text-sm text-gray-600 mb-6">Pick the winner. We’ll wire up ELO in Step 4.</p>
  <DuelContainer client:load lang={lang} />
</SiteLayout>


